page {
  background-color: #f0f4f5;
}

.swiper-box,
.swiper-item-images {
  width: 100%;
  height: 700rpx;
}

.price-dec {
  width: 100%;
  background-color: #fff;
}

.price-dec .price-box, .price-dec .dec{
  width: 90%;
  margin-left: 5%;
}

.price-dec .group-buy {
  width: 100%;
  line-height: 60rpx;
  background-color: #ee0a24;
  color: #fff;
  margin-bottom: 10rpx;
}

.group-buy-price {
  width: 62%;
  font-size: 28rpx;
}

.group-buy-price view {
  letter-spacing: 2rpx;
  margin-left: 8%;
}

.group-buy-price-box .price {
  text-decoration: line-through;
  color: #f8b5a5;
  margin-left: 20rpx;
}

.group-buy-price-box .origin-price text {
  font-size: 40rpx;
}

.group-buy-countdown {
  font-size: 28rpx;
}

.van-count-down {
  color: #fff !important;
}

.price-dec .price-box {
  line-height: 60rpx;
  margin-top: 10rpx;
}

.price-box .origin-price {
  color: #e1594b;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 8rpx;
}

.price-box .origin-price text {
  font-size: 32rpx;
}

.price-box .price {
  text-decoration: line-through;
  color: #9b9b9b;
  font-size: 16rpx;
}

.price-box .price text {
  font-size: 20rpx;
}

.price-dec .dec {
  font-weight: 600;
  width: 90%;
  margin-left: 5%;
  color: #000;
  font-size: 32rpx;
  padding-bottom: 14rpx;
}

.group-buy {
  display: flex;
  flex-wrap: nowrap;
}

.group-buy-cell {
  padding-bottom: 14rpx;
  font-size: 28rpx;
}

.cell-group {
  margin: 16rpx 0;
}

.goods-title text {
  color: #363636;
  font-size: var(--cell-font-size, 14px);
  margin-left: 5%;
}

.goods-img,
.goods-title {
  background: #fff;
  width: 100%;
  padding: 10rpx 0;
}

.goods-img image {
  width: 90%;
  margin-left: 5%;
}

.goods-img image:last-child {
  margin-bottom: 100rpx;
}

.van-cell:after,
.van-hairline--top-bottom:after {
  border: none !important;
}

.goods-norm-box {
  width: 90%;
  margin-left: 5%;
}

.goods-norm-box button {
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.next-btn {
  position: fixed !important;
  bottom: 20rpx;
  width: 90% !important;
  margin-left: 5%;
}

.count-down {
  display: flex;
  justify-content: center;
}

.van-count-down {
  color: #fff !important;
}

.item {
  display: inline-block;
  width: 22px;
  margin-right: 5px;
  color: #ee0a24;
  font-size: 12px;
  text-align: center;
  background-color: #fff;
  border-radius: 2px;
}