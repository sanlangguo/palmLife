<view>
  <van-swipe-cell wx:for="{{ goods }}" wx:key="{{item._id}}" right-width="{{ 65 }}">
    <van-cell-group>
      <van-checkbox-group class="card-goods" value="{{ checkedGoods }}" bind:change="onChange">
        <van-checkbox class="card-goods__item" wx:key="{{ item.id }}" name="{{ item.id }}">
          <van-card title="{{ item.title }}" price-class='price-with' desc="{{ item.desc }}" price="{{ item.formatPrice }}" thumb="{{ item.thumb }}">
          <view slot="footer" class="van-card__footer cart-action">
            <view bindtap="reduce" data-id="{{item}}">-</view>
            <view>{{item.num}}</view>
            <view bindtap="increase" data-id="{{item}}">+</view>
          </view>
          </van-card>
        </van-checkbox>
      </van-checkbox-group>
    </van-cell-group>
    <view slot="right" bindtap="deleteGood" class='delete-btn' data-id="{{item._id}}">删除</view>
  </van-swipe-cell>
  <van-submit-bar price="{{ totalPrice }}" disabled="{{ !checkedGoods.length }}" button-text="{{ submitBarText }}" bind:submit="onSubmit" />
</view>